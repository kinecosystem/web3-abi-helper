{
	"compilerOptions": {
		"module": "commonjs",
		"lib": [
			"es6"
		],
		"target": "es6",
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			],
			"web3-eth-abi": [
				"src/types/web3-eth-abi.d.ts"
			],
		},
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"removeComments": true,
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true,
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
