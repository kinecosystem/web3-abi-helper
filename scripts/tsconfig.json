{
	"compilerOptions": {
		"target": "ES6",
		"outDir": "bin",
		"rootDir": "src",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"module": "commonjs",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"removeComments": true,
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true,
	},
	"exclude": [
		"bin",
		"../node_modules"
	]
}
